<%= form_with(model: order, local: true) do |form| %>
  <% if order.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(order.errors.count, "error") %> prohibited this order from being saved:</h2>

      <ul>
      <% order.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= form.label :price %>
    <%= form.text_field :price, readonly: true %>
  </div>

  <div class="field">
    <%= form.label :user_id %>
    <%= form.select :user_id, User.all.collect {|s| [s.display_name, s.id]} %>
  </div>

  <div class="field">
    <%= form.label :situation_id %>
    <%= form.select :situation_id, Situation.all.collect {|s| [s.description, s.id]} %>
  </div>

  <div class="actions">
    <%= form.submit %>
  </div>
<% end %>
