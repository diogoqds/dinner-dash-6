<head>
    <meta charset='UTF-8'>
</head>
<body>
    <% if user_signed_in? %>
    <% if current_user.is_admin? %>
      <div class="backoffice_background">
        <%= render partial: "layouts/backoffice_header" %>
      </div>
      <%= render partial: "layouts/backoffice_navbar" %>
    <h1> Categorias </h1>
    <% @categories.each do |category| %>
        <h3 style='display: inline;'><%= category.name %></h3>
        <%= link_to 'Editar', edit_category_path(category.id), class: 'btn btn-outline-primary btn-sm' %>
        <%= link_to 'Excluir', destroy_category_path(category.id), method: 'delete', class: 'btn btn-outline-primary btn-sm' %>
        <br>
    <% end %>
    <br>
    <%= link_to 'Nova Categoria', categories_new_path, class: 'btn btn-primary' %>
    <%= link_to 'Voltar', backoffice_path, class: 'btn btn-primary' %>
    <% end  %>
    <% end  %>
</body>
